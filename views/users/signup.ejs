<% layout("layouts/boilerplate") %>
<body class="signup">  
    <div class="row justify-content-center mt-5">
        <div class="col-4">
            <div class="card  signup-card shadow p-4">
                <h2 class="text-center mb-4">Start your journey here.</h2>
                <form method="post" class="needs-validation" novalidate action="/signup"  id="signup-form">
                    <div class="form-group">
                        <input type="text" class="form-control" name="user[username]" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control"  name="user[email]" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control"  name="user[password]" placeholder="Password" required>
                    </div>
                    <div class="form-group btn-container">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</body>
