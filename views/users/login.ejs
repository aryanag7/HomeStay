<% layout("layouts/boilerplate") %>
<body class="login">  
    <div class="row justify-content-center mt-5">
        <div class="col-4">
            <div class="card  login-card shadow p-4">
                <h2 class="text-center mb-4">Access your account.</h2>
                <form method="post" class="needs-validation" novalidate action="/login"  id="login-form">
                    <div class="form-group login-form mb-5">
                        <input type="text" class="form-control" name="username" placeholder="Username" required>
                        <small class="form-text text-muted">Test username: test</small>
                    </div>
                    <div class="form-group login-form mb-4">
                        <input type="password" class="form-control"  name="password" placeholder="Password" required>
                        <small class="form-text text-muted">Test password: ronaldo</small>
                    </div>
                    <div class="form-group btn-container mb-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
                 <!-- "Not a member? Sign up" link -->
                 <div class="text-center">
                    <p class="mb-0">Not a member? <a href="/signup">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
